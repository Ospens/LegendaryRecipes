- @recipes.each do |category|
  .title-category
    %strong= category.first.category.name
  .recipes-container
    - category.each do |recipe|
      .top-recipes-blocks
        .image
          = link_to (image_tag recipe.image.url(:large), class: 'img-recipe'), recipe_url(recipe.id) if recipe.image?
        .name
          %strong= recipe.title
          = link_to 'edit', edit_recipe_path(recipe)
        .description
          %em
            = recipe.description