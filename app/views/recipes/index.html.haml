- @recipes.each do |category|
  .title-category
    %strong= category.first.category.name
  .recipes-container
    - category.each do |recipe|
      .top-recipes-blocks
        .image
          = link_to (image_tag recipe.img, class: 'img-recipe'), recipe_url(recipe.id)
        .name
          %strong= recipe.title
        .description
          %em
            = recipe.description